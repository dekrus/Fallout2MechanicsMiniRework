procedure rm_witnesses_by_steal_num(variable steal_num) begin
   variable uniq_id, orig_steal_num, new_steal_num;
   variable free_from_arr = create_array_map;
   variable free_from_arr_count;
   foreach (uniq_id:orig_steal_num in witnesses_array) begin
      if uniq_id > 64 andAlso orig_steal_num > 0 andAlso (orig_steal_num bwand steal_num) == steal_num then begin
         new_steal_num = (orig_steal_num bwand (bwnot steal_num));
         if new_steal_num > 0 then
            set_array(witnesses_array, uniq_id, new_steal_num);
         else begin
            set_array(free_from_arr, free_from_arr_count, uniq_id);
            free_from_arr_count += 1;
         end
      end
   end

   if free_from_arr_count > 0 then begin
      foreach uniq_id in free_from_arr begin
         set_array(witnesses_array, uniq_id, 0);
      end
   end
   free_array(free_from_arr);
end

