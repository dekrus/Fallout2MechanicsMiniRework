procedure get_item_penalty(variable thief, variable target, variable item, variable stype) begin
   variable item_pid = obj_pid(item);
   variable item_size;
   variable item_weight_lvar;
   variable item_penalty;
   variable pickpocket = has_trait(TRAIT_PERK, thief, PERK_pickpocket);
   variable item_type;

   item_type = obj_item_subtype(item);

   if pickpocket <= 0 then
      item_size = get_proto_data(item_pid, PROTO_IT_SIZE);

   item_weight_lvar = item_weight(item);
   if pickpocket > 0 andAlso item_weight_lvar > 0 then
      item_weight_lvar = item_weight_lvar * 0.3;

   if item_weight_lvar < 0 then
      item_weight_lvar = 0;
   else
      item_weight_lvar = ceil(item_weight_lvar);

   if item_size + item_weight_lvar <= 0 then begin
      if item_type == item_type_drug then
         item_penalty = 27;
      else if item_type == item_type_misc_item then
         item_penalty = 0.25;
      else if item_type == item_type_key_item then
         item_penalty = 18;
      else if item_type == item_type_armor then
         item_penalty = 80;
      else if item_type == item_type_weapon then
         item_penalty = 60;
      else if item_type == item_type_ammo then
         item_penalty = 40;

   end
   else begin
      item_penalty = ((item_size + item_weight_lvar + 3) * 2) * 3.0;
   end

   if item_penalty <= 0 then
      item_penalty = 0.0001;
   return item_penalty;
end


procedure get_chance_to_steal_without_item(variable thief, variable target, variable item, variable stype, variable quantity, variable min_item_mode = 0, variable item_penalty = -1) begin
   variable user_steal_skill = has_skill(thief, SKILL_STEAL);
   variable user_sneak_skill = has_skill(thief, SKILL_SNEAK);
   variable target_barter_skill = has_skill(target, SKILL_BARTER);
   variable thief_luck = get_critter_stat(thief, STAT_lu);
   variable skill_bonus;
   variable user_steal_skill_mult = 2.00;
   variable target_pe = get_critter_stat(target, STAT_pe);
   variable target_pe_mult = 8;
   variable chance_to_steal_without_item = 0;
   variable steal_bonus = (thief_luck / 2);
   variable pickpocket = has_trait(TRAIT_PERK, thief, PERK_pickpocket);
   variable night_vision;
   variable light_level;
   variable target_rot = has_trait(TRAIT_OBJECT, target, OBJECT_CUR_ROT);
   variable target_rot_to_tar = rotation_to_tile(tile_num(target), tile_num(thief));
   variable ally_rot = -6;
   variable ally_rot_to_tar = - 6;
   variable team = has_trait(TRAIT_OBJECT, target, OBJECT_TEAM_NUM);
   variable ally = 0;
   variable ally_team = -1;
   variable ally_pe = 0;
   variable thief_state = critter_state(thief);
   variable target_state = critter_state(target);
   variable distance;
   variable ally_state = -1;
   variable ally_cur_frm = -1;
   variable darkness_penalty;
   variable target_kill_type;
   variable item_total_penalty;
   variable chance_to_steal;
   variable min_skill_needed;
   variable hand_item_stealing;
   variable pe_effect;
   if user_steal_skill >= 999 then
      return 100;

   if target > 0 then target_kill_type = critter_kill_type(target);
   // Stealing weapons from hand.
   if (item == right_hand_item_copy orElse item == left_hand_item_copy) andAlso stype == 0 then begin
      right_hand_item_target = target;
      hand_item_stealing = 40 + MinWpnStealReq + target_pe * 5;
      if pickpocket < 1 then begin
         hand_item_stealing += (get_proto_data(obj_pid(item), PROTO_IT_SIZE) + item_weight(item)) * 0.5;
      end
      else
         hand_item_stealing = (hand_item_stealing) * 0.8;
   end
   // SKILL_SCIENCE and SKILL_REPAIR bonus for stealing from robots
   if target_kill_type == KILL_TYPE_robot_kills then begin
      skill_bonus = (has_skill(thief, SKILL_REPAIR) / 3) + (has_skill(thief, SKILL_SCIENCE) / 2);
      user_steal_skill = user_steal_skill + skill_bonus;
      user_sneak_skill = user_sneak_skill + skill_bonus;
   end
   if target_kill_type != KILL_TYPE_alien_kills andAlso target_kill_type != KILL_TYPE_robot_kills andAlso target_kill_type != KILL_TYPE_floater_kills then begin
      light_level = obj_get_visible_light(thief);
      night_vision = has_trait(TRAIT_PERK, thief, PERK_night_vision);
      if light_level  < 41216 + (night_vision * 13107) then begin
         darkness_penalty = -4 + ((light_level - (night_vision * 13107.0)) / 41216) * 3.5;
         if darkness_penalty > -0.5 then
            darkness_penalty = -0.5;

         target_pe_mult += darkness_penalty;
      end
   end
   // stealing penalty if target's allies can see the thief
   if StealRebalance == 2 then begin
      foreach ally in list_as_array(LIST_CRITTERS) begin
            ally_rot = -6;
            ally_rot_to_tar = -6;
         if ally != thief andAlso ally != target andAlso is_sentient(ally) then begin
               ally_rot = has_trait(TRAIT_OBJECT, ally, OBJECT_CUR_ROT);
               ally_rot_to_tar = real_rotation_to_tile(tile_num(ally), tile_num(thief));
               ally_team = has_trait(TRAIT_OBJECT, ally, OBJECT_TEAM_NUM);
               distance_objs(distance, ally, thief);
               ally_pe = get_critter_stat(ally, STAT_pe);
               ally_state = critter_state(ally);
               ally_cur_frm = get_object_data(ally, OBJ_DATA_CUR_FRM);
               if ally_pe >= 3 andAlso ( (ally_cur_frm == 0) orElse (crit_is_moving(ally)) ) andAlso not(ally_state bwand (DAM_KNOCKED_OUT bwor DAM_KNOCKED_DOWN bwor DAM_BLIND)) andAlso ally_team == team andAlso (ally_rot == ally_rot_to_tar or ((ally_rot == (ally_rot_to_tar + 1)%6  or ally_rot == (ally_rot_to_tar + 5)%6) andAlso distance <= ally_pe*target_pe_mult/pe_div)) then begin
                  if obj_can_see_obj(ally, thief) then begin
                  target_pe = target_pe + (ally_pe / 2);
               end
            end
         end
      end
   end

   //steal_bonus if target can't see thief
   if not(obj_can_see_obj(target, thief)) then begin
      target_pe_mult -= 0.3;
      steal_bonus += 50;
   end
   // bonus if target is prone or blind
   else if (target_state bwand DAM_BLIND) orElse (target_state bwand CRITTER_IS_PRONE) then begin
      steal_bonus += 25;
   end
   else begin
         // stealing penalty if target facing the thief
      if target_rot == target_rot_to_tar  then begin
         if pickpocket < 1 then begin
            target_pe_mult += 1;
            steal_bonus -= 30;
         end
      end
         // Penalty for theft if the target is sideways to the thief
      if target_rot == (target_rot_to_tar + 1) % 6 or target_rot == (target_rot_to_tar + 5) % 6 then begin
         if pickpocket < 1 then begin
            target_pe_mult += 0.5;
            steal_bonus -= 20;
         end
      end
         // bonus if thief right behind target
      if target_rot == (target_rot_to_tar + 3) % 6 then begin
         steal_bonus += 5;
      end
   end

   // bonus for sneak even if target cant see thief
   if using_skill(thief, SKILL_SNEAK) then begin
      steal_bonus += user_sneak_skill / 5.0;
   end
      //it harder to steal from merchants
   if target_barter_skill >= 50 then begin
      target_pe_mult += 0.5;
      steal_bonus -= (target_barter_skill / 2);
   end
      //crippled arms = harder to pickpocket
   if (thief_state bwand DAM_CRIP_ARM_RIGHT) andAlso (thief_state bwand DAM_CRIP_ARM_LEFT) then begin
      steal_bonus -= 80;
   end

   if user_steal_skill <= 0 then
      user_steal_skill = 1;


   chance_to_steal_without_item = 30 + 20 * stype + steal_bonus + (user_steal_skill_mult * user_steal_skill) - steal_count - hand_item_stealing - target_pe * 2.5;

   pe_effect = 1.1 - 0.006 * target_pe * target_pe_mult;
   if pe_effect < 0.001 then
      pe_effect = 0.001;

   gPeEffectMult = pe_effect;
   chance_to_steal_without_item *= pe_effect;


   if min_item_mode <= 0 then begin
      if item_penalty >= 0 then
         item_total_penalty = item_penalty * quantity;
      else
         item_total_penalty = get_item_penalty(thief, target, item, stype) * quantity;

      item_total_penalty /= pe_effect;
   end

   if min_item_mode <= 0 andAlso floor(chance_to_steal_without_item + steal_count * pe_effect - item_total_penalty) < min_chance_for_success then begin
      if pe_effect <= 0 then
          min_skill_needed = 999;
      else
         min_skill_needed = ceil(((min_chance_for_success + item_total_penalty) / pe_effect - 30
            - 20*stype - steal_bonus + hand_item_stealing + target_pe*2.5) / user_steal_skill_mult);

      return (-min_skill_needed);
   end
   else begin
      if chance_to_steal_without_item < 0 then
         chance_to_steal_without_item = 0;
      return chance_to_steal_without_item;
   end
end

procedure get_chance_to_steal(variable thief, variable target, variable item, variable stype, variable quantity, variable min_item_mode = 0, variable item_penalty = -1, variable base_chance = -1) begin
   variable max_steal_bonus;
   variable max_steal_chance;
   variable chance_all;
   variable chance_one;
   variable max_count_95;
   variable max_count_min_success;
   variable chance;
   variable min_chance_for_success_here;
   variable new_quantity;

   if base_chance < 0 then
      base_chance = get_chance_to_steal_without_item(thief, target, item, stype, quantity, min_item_mode, item_penalty);

   if min_item_mode != 2 andAlso base_chance <= 0 then begin
      if min_item_mode == 1 then return ITEM_COUNT_MULT;
      return 0;
   end


   max_steal_bonus = (has_skill(thief, SKILL_STEAL) - 130) / 10;
   if max_steal_bonus < 0 then max_steal_bonus = 0;
   max_steal_bonus += dude_lu / 10;
   if max_steal_bonus > 4 then max_steal_bonus = 4;

   max_steal_chance = 95 + max_steal_bonus;

   if item_penalty <= -1 then
      item_penalty = get_item_penalty(thief, target, item, stype);

   item_penalty /= gPeEffectMult;
   //mode 1 - max count to max steal chance
   if min_item_mode == 1 then begin
      chance_all = floor(base_chance - item_penalty * quantity);

      if chance_all > max_steal_chance then begin
         chance_all = max_steal_chance;
      end

      if chance_all >= max_steal_chance then begin
         return (quantity * ITEM_COUNT_MULT) + max_steal_chance;
      end

      max_count_95 = floor((base_chance - (max_steal_chance)) / item_penalty);
      if max_count_95 > quantity then max_count_95 = quantity;
      if max_count_95 > 0 then begin
         return (max_count_95 * ITEM_COUNT_MULT) + max_steal_chance;
      end

      if item_penalty < 1 then begin
         new_quantity = ceil(1.0 / item_penalty);
         if new_quantity > 1 then
            item_penalty *= new_quantity;
      end
      else
         new_quantity = 1;

      chance_one = get_chance_to_steal_without_item(thief, target, item, stype, new_quantity, 0, item_penalty * gPeEffectMult);
      if chance_one < 0 then
         return chance_one;

      chance_one = floor(base_chance - item_penalty);

      if chance_one < 0 then
         chance_one = 0;

      if chance_one > max_steal_chance then begin
         chance_one = max_steal_chance;
      end

      if chance_one > 0 then begin
         if new_quantity > 1 then
            return (new_quantity * ITEM_COUNT_MULT) + chance_one;

         return (ITEM_COUNT_MULT) + chance_one;
      end

      return ITEM_COUNT_MULT;
   end
   //mode 2 - max count to min steal chance
   else if min_item_mode == 2 then begin

      chance = floor(base_chance - (item_penalty * quantity));
      min_chance_for_success_here = min_chance_for_success - steal_count * gPeEffectMult;
      if min_chance_for_success_here < 1 then
         min_chance_for_success_here = 1;

      if chance <= min_chance_for_success_here then begin
         max_count_min_success = floor((base_chance - min_chance_for_success_here) / item_penalty);


         if max_count_min_success > 0 then begin
            if max_count_min_success <= quantity then begin
               return (max_count_min_success * ITEM_COUNT_MULT) + min_chance_for_success_here;
            end else
               return chance;
         end
      end
      else begin

         if chance > max_steal_chance then begin
            chance = max_steal_chance;
         end

         return chance;
      end

   end
   //mode 0
   else begin
      if quantity > 1 then
         item_penalty *= quantity;
      chance = floor(base_chance - item_penalty);

      if chance < 0 then return 0;

      if chance > max_steal_chance then begin
         chance = max_steal_chance;
      end

      return chance;
   end
end

