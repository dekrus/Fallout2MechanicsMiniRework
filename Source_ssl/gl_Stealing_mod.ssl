procedure callback_dmg_the_dude_critically begin
   variable dude_max_hp = get_critter_stat(dude_obj, STAT_max_hp) / 4;
   variable dude_cur_hp = get_critter_stat(dude_obj, STAT_current_hp);
   variable dude_dt = get_critter_stat(dude_obj, STAT_dmg_thresh);
   variable dude_dr = get_critter_stat(dude_obj, STAT_dmg_resist);
   variable dmg = round((random(9, 18) + anim_tar_melee_dmg - (dude_dt / 5)) * (100 - (dude_dr / 5)) / 100.0);
   variable injury_chance_bonus = 2;
   call timed_event_p_proc();
   if dmg < 1 then begin
      if anim_tar_kill_type != KILL_TYPE_super_mutant_kills andAlso not(military_fid(critter_art_fid(anim_tar_obj))) andAlso not(power_armor_fid(critter_art_fid(anim_tar_obj))) then begin
         dmg = 0;
      end
      else begin
         dmg = random(5,9);
      end
   end
   if dmg > dude_max_hp then dmg = dude_max_hp;
   if anim_tar_kill_type == KILL_TYPE_super_mutant_kills orElse anim_tar_kill_type == KILL_TYPE_robot_kills orElse KILL_TYPE_deathclaw_kills orElse power_armor_fid(critter_art_fid(anim_tar_obj)) then begin
      injury_chance_bonus += 2;
   end
   else if anim_tar_kill_type == KILL_TYPE_women_kills then begin
      injury_chance_bonus -= 1;
   end
   else if anim_tar_kill_type == KILL_TYPE_children_kills then begin
      injury_chance_bonus -= 10;
   end
   if dmg >= dude_cur_hp then begin
      call dude_is_dying();
   end
   else begin
      critter_heal(dude_obj, -dmg);
      // 1 critical dmg
      if dmg == 1 then begin
         if random(0,2) then begin
            display_msg(modmsg(msg_you_were_critically_hit_for)+dmg+modmsg(msg_hit_point));
            // 25% for random crip DAM_CRIP_RANDOM
            if random(0,15) <= injury_chance_bonus then
               critter_injure(dude_obj, get_array(bit_array,random(2,5)));
         end
         //head crit
         else begin
            display_msg(modmsg(msg_you_were_critically_head_hit_for)+dmg+modmsg(msg_hit_point));
            if random(0,15) <= injury_chance_bonus then
               critter_injure(dude_obj, DAM_BLIND);
         end
      end
      // lot of critical dmg
      else begin
         //non head crit
         if random(0,1) then begin
            display_msg(modmsg(msg_you_were_critically_hit_for)+dmg+modmsg(msg_hit_points));
            // random crip DAM_CRIP_RANDOM
            if random(0,10) <= injury_chance_bonus then
               critter_injure(dude_obj, get_array(bit_array,random(2,5)));
         end
         //head crit
         else begin
            display_msg(modmsg(msg_you_were_critically_head_hit_for)+dmg+modmsg(msg_hit_points));
            // blind
            if random(0,10) <= injury_chance_bonus then
               critter_injure(dude_obj, DAM_BLIND);
         end
      end
   end
end

