procedure timed_event_p_proc begin
   variable target;
   variable time_in_ticks;
   variable tar_state;
   variable tar_rot;
   variable tar_cur_rot;
   variable tar_tile;
   variable tar_cur_tile;
   variable tar_script_id;
   variable arr_len;
   variable arr_key;
   variable event_num;
   variable event_time;
   variable i;
   variable targets_number_max;
   variable targets_number;
   if not(combat_is_initialized) then begin
      if (fixed_param == fixed_param_steal) orElse scripts_disabled > 0 then begin
         arr_len = len_array(timed_event_targets_array);
         if arr_len >= 10 then begin
            targets_number_max = arr_len / (arr_shift_max + 1);
            for (i = 0; i < (2 * arr_len) + 60; i+=(arr_shift_max+1)) begin
               arr_key = i;
               target = get_array(timed_event_targets_array,(arr_key + arr_shift_ptr));
               // target check
               if target > 0 then begin
                  targets_number += 1;
                  if dude_is_in_anim > 0 then begin
                     time_in_ticks = real_game_time + game_ticks(6);
                  end
                  else begin
                     time_in_ticks = game_time;
                  end
                  event_time = get_array(timed_event_targets_array, (arr_key + arr_shift_fixed_time));
                  tar_state = critter_state(target);
                  if is_really_dead(target,tar_state, get_critter_stat(target, STAT_current_hp)) then begin
                     call rm_timed_event_target(target, arr_key);
                     continue;
                  end
                  else if (is_in_prone_anim(critter_art_anim(target))) or target == anim_tar_obj then begin
                     continue;
                  end
                  // time check
                  if event_time <= time_in_ticks then begin
                     event_num = get_array(timed_event_targets_array, (arr_key + arr_shift_fixed_num));

                     //NUM 1 - attack if target can see dude
                     if event_num == event_attack andAlso (dude_is_in_anim <= 0) then begin
                        if attack_delay > 0 then begin
                           attack_delay = 0;
                           set_array(timed_event_targets_array, (arr_key + arr_shift_fixed_time),(time_in_ticks+game_ticks(4)));
                        end
                        else begin
                           call attack_the_dude(target);
                        end
                        continue;
                     end
                     //
                     //NUM 2 - flee from dude if dude is near and target can see dude
                     else if event_num == event_flee_from_dude then begin
                        call Flee_From_Dude_proc(target, false);
                        continue;
                     end
                     //
                     //NUM 5 - try to find stolen weapon
                     //else if event_num == event_find_stolen_weapon then begin
                        //call TRY_FIND_STOLEN_WEAPON(target);
                        //continue;
                     //end
                     //NUM 3 - return to the starting point
                     else if event_num == event_return_to_tile then begin
                        tar_tile = get_array(timed_event_targets_array, (arr_key + arr_shift_tile));
                        tar_rot = (get_array(timed_event_targets_array, (arr_key + arr_shift_rot))) - 1;
                        //animate if not on the starting tile
                        if tile_num(target) != tar_tile then begin
                           reg_anim_clear(target);
                           reg_anim_func(REG_ANIM_BEGIN, RB_RESERVED);
                           reg_anim_set_priority(sfall_510);
                           reg_anim_obj_run_to_tile(target, tar_tile, -1);
                           reg_anim_turn_towards(target, tile_num_in_direction(tar_tile,tar_rot,1), -1);
                           reg_anim_animate(target, ANIM_stand, -1);
                           reg_anim_end();
                           continue;
                        end
                        else begin
                           if (dude_is_in_anim > 0) then begin
                              continue;
                           end
                           //anim(target, ANIMATE_ROTATION, tar_rot);
                           //reg_anim_clear(target);
                           //reg_anim_func(REG_ANIM_BEGIN, RB_RESERVED);
                           //reg_anim_set_priority(sfall_510);
                           //reg_anim_turn_towards(target, tile_num_in_direction(tar_tile,tar_rot,1), -1);
                           //reg_anim_end();
                           tar_cur_rot = has_trait(TRAIT_OBJECT, target, OBJECT_CUR_ROT);
                           //remove the target from the array if it is in the starting position
                           if tar_rot == tar_cur_rot then begin
                              //if is_in_array(check_id(target), timed_event_targets_lvar_array) then begin
                                 //tar_script_id = (get_array(timed_event_targets_array, (arr_key + arr_shift_script)));
                                 //call add_script_restore_lvars(target, tar_script_id);
                              //end
                              call rm_timed_event_target(target, arr_key);
                              continue;
                           end
                           //add the target to the array_anim_rotation if it is not in orig_rot
                           else begin
                           //animate rotation to orig_rot if on the starting tile
                              //call remove_script_save_lvars(target);
                              //anim(target, ANIMATE_ROTATION, tar_rot);
                              reg_anim_clear(target);
                              reg_anim_func(REG_ANIM_BEGIN, RB_RESERVED);
                              reg_anim_set_priority(sfall_510);
                              reg_anim_turn_towards(target, tile_num_in_direction(tar_tile,tar_rot,1), -1);
                              reg_anim_end();
                              tar_cur_rot = has_trait(TRAIT_OBJECT, target, OBJECT_CUR_ROT);
                              //if is_in_array(check_id(target), timed_event_targets_lvar_array) then begin
                                 //tar_script_id = (get_array(timed_event_targets_array, (arr_key + arr_shift_script)));
                                 //call add_script_restore_lvars(target, tar_script_id);
                              //end

                              if tar_rot == tar_cur_rot then begin
                                 call rm_timed_event_target(target, arr_key);
                                 continue;
                              end
                              else begin
                                 set_array(timed_event_targets_array, (arr_key + arr_shift_fixed_num), 4);
                                 continue;
                              end
                           end
                        end
                     end
                     //
                     //NUM 4 - turn to original rotation
                     else if event_num == event_restore_rotation andAlso (dude_is_in_anim <= 0) then begin
                        tar_tile = get_array(timed_event_targets_array, (arr_key + arr_shift_tile));
                        tar_rot = (get_array(timed_event_targets_array, (arr_key + arr_shift_rot))) - 1;
                        tar_cur_rot = has_trait(TRAIT_OBJECT, target, OBJECT_CUR_ROT);
                        if tar_tile != tile_num(target) orElse tar_rot == tar_cur_rot then begin
                           call rm_timed_event_target(target, arr_key);
                           continue;
                        end

                        reg_anim_clear(target);
                        reg_anim_func(REG_ANIM_BEGIN, RB_RESERVED);
                        reg_anim_set_priority(sfall_510);
                        reg_anim_turn_towards(target, tile_num_in_direction(tar_tile,tar_rot,1), -1);
                        reg_anim_end();
                        tar_cur_rot = has_trait(TRAIT_OBJECT, target, OBJECT_CUR_ROT);
                        if tar_rot == tar_cur_rot then begin
                           call rm_timed_event_target(target, arr_key);
                           continue;
                        end
                        else begin
                           //call remove_script_save_lvars(target);
                           reg_anim_clear(target);
                           reg_anim_func(REG_ANIM_BEGIN, RB_RESERVED);
                           reg_anim_set_priority(sfall_510);
                           reg_anim_turn_towards(target, tile_num_in_direction(tar_tile,tar_rot,1), -1);
                           reg_anim_end();
                           tar_cur_rot = has_trait(TRAIT_OBJECT, target, OBJECT_CUR_ROT);
                           //if is_in_array(check_id(target), timed_event_targets_lvar_array) then begin
                              //tar_script_id = (get_array(timed_event_targets_array, (arr_key + arr_shift_script)));
                              //call add_script_restore_lvars(target, tar_script_id);
                           //end

                           if tar_rot == tar_cur_rot then begin
                              call rm_timed_event_target(target, arr_key);
                              continue;
                           end
                           else begin
                              set_array(timed_event_targets_array, (arr_key + arr_shift_fixed_num), 4);
                              continue;
                           end
                        end
                     end
                     //
                  end
                  //not time yet
                  else begin
                     event_num = get_array(timed_event_targets_array, (arr_key + arr_shift_fixed_num));
                     //NUM 1 - turn to dude if target can see dude
                     if event_num == event_attack andAlso ((obj_can_see_obj(target,dude_obj)) orElse tile_distance_objs(target,dude_obj) <= 10)then begin
                        anim(target, ANIMATE_ROTATION, rotation_to_tile(tile_num(target), tile_num(dude_obj)));
                        add_global_timer_event(game_ticks(1), fixed_param_steal);
                        timer_added_time = time_in_ticks;
                        continue;
                     end
                  end
                  // exit the check loop if all targets have been processed
                  if targets_number > targets_number_max then begin
                     break;
                  end
               end
            end
         end
      end
   end
   // Penalty for failed stealing
   if (fixed_param == fixed_update_penalty) then begin
      if combat_is_initialized then
         add_global_timer_event(game_ticks(5), fixed_update_penalty);
      else begin
         call update_penalty_value_dec_witnesses(cur_town,1);
      end
   end
   // enable game ui if
   if (fixed_param == 5) then begin
      if game_ui_is_disabled then begin
         game_ui_enable;
         call clear_gvars();
      end
   end
   else begin
      arr_len = len_array(timed_event_targets_array);
      if arr_len > 0 then begin
         time_in_ticks = game_time;
         if timer_added_time + (game_ticks(1)) <= time_in_ticks then begin
            add_global_timer_event(game_ticks(1), fixed_param_steal);
            timer_added_time = time_in_ticks;
         end
      end
   end
end

procedure add_witness_to_array(variable witness, variable new_steal_num)  begin
   variable uniq_id = check_id(witness);
   variable last_steal_num = get_array(witnesses_array, uniq_id);
   variable steal_num = get_array(bit_array,new_steal_num);// 0 is bit_1
   set_array(witnesses_array, uniq_id, (last_steal_num bwor steal_num));
end

inline procedure pickup_proc_exec(variable self, variable tar_sid, variable thief) begin
   pickup_proc_check = self;
   set_obj_script_objects(tar_sid, thief, 0);
   exec_obj_script_proc(tar_sid, pickup_proc);
end


procedure ANIM_witnesses(variable target, variable town_id, variable skip_target, variable sound_level = base_sound_level, variable target_will_die = 0) begin
   variable dude_hex = tile_num(dude_obj);
   variable witness_array;
   variable witness;
   variable blocking_obj;
   variable can_see;
   variable witness_team;
   variable is_sneaking = using_skill(dude_obj, SKILL_SNEAK);
   variable witness_rot_to_dude;
   variable witness_rot;
   variable witness_pe;
   variable witness_pe_boost = 6;
   variable failed_steal_count = get_array(witnesses_array, witnesses_array_failed_steal_count);
   witness_array = objects_in_radius(dude_hex, sound_level, dude_elevation, OBJ_TYPE_CRITTER);
   witnesses_exist = 1;

   if failed_steal_count <= 0 then
      failed_steal_count = 0;
   else if failed_steal_count > 30 then begin
      failed_steal_count = 1;
      set_array(witnesses_array, witnesses_array_applied_steal_count, failed_steal_count);
   end

   //if steal_num_has_living_witness(bit_array[failed_steal_count]) then begin
      //call update_penalty_value(town_id, 1);
      //call rm_witnesses_by_steal_num(bit_array[failed_steal_count]);
      //set_array(witnesses_array, witnesses_array_applied_steal_count, 1);
   //end

   if target > 0 andAlso skip_target <= 0 then
      call add_witness_to_array(target, failed_steal_count); //add orig target to witnesses

   foreach witness in witness_array begin
      if witness > 0 andAlso (is_sentient(witness)) andAlso critter_state(witness) == CRITTER_IS_NORMAL andAlso (art_anim(obj_art_fid(witness)) == 0) andALso witness != dude_obj andAlso witness != target andAlso obj_is_visible_flag(witness) then begin
         blocking_obj = obj_blocking_line(witness, dude_hex, BLOCKING_TYPE_SHOOT);
         can_see = 0;
         witness_team = has_trait(TRAIT_OBJECT, witness, OBJECT_TEAM_NUM);
         if witness_team != TEAM_PLAYER andAlso obj_can_see_obj(witness, dude_obj) then begin
            witness_count += 1;
            can_see = 1;
            //Witnesses of an unsuccessful pickpocket also begin to consider the player a thief
            if SneakDetection > 0 andAlso is_sneaking > 0 then begin
               set_outline(witness, OUTLINE_NEW_GLOW_RED);
            end
            float_msg(witness, "!", FLOAT_MSG_LIGHT_RED);
            call create_arrays_last_pickpocket_targets_and_add_target(witness,4);
            call add_witness_to_array(witness, failed_steal_count);
         end
         if blocking_obj <= 0 orElse blocking_obj == dude_obj orElse blocking_obj == target orElse can_see > 0 then begin
               witness_rot_to_dude = rotation_to_tile(tile_num(witness),dude_hex);
               witness_rot = has_trait(TRAIT_OBJECT, witness, OBJECT_CUR_ROT);
            if witness_team != TEAM_PLAYER andAlso witness_rot != witness_rot_to_dude then begin
               //call add_timed_event_TURN_BACK(witness, game_ticks(random(1, 6)),1);
               call add_timed_event_RESTORE_ROT(witness, game_ticks(random(1, 6)),1);
               anim(witness, ANIMATE_ROTATION, rotation_to_tile(tile_num(witness), dude_hex));
            end
            if can_see <= 0 andAlso witness_rot != witness_rot_to_dude then begin
               if witness_team != TEAM_PLAYER  then begin
                  witness_pe = get_critter_extra_stat(witness, STAT_pe);
                  set_critter_extra_stat(witness, STAT_pe, witness_pe + witness_pe_boost);
                  if obj_can_see_obj(witness, dude_obj) then begin
                  //Witnesses of an unsuccessful pickpocket also begin to consider the player a thief
                     if SneakDetection > 0 andAlso is_sneaking > 0 then begin
                        set_outline(witness, OUTLINE_NEW_GLOW_RED);
                     end
                     float_msg(witness, "!", FLOAT_MSG_LIGHT_RED);
                     call create_arrays_last_pickpocket_targets_and_add_target(witness,3);
                     call add_witness_to_array(witness, failed_steal_count);
                     witness_count += 1;
                  end
                  else begin
                     if SneakDetection > 0 andAlso is_sneaking > 0 then begin
                        set_outline(witness, OUTLINE_ORANGE);
                     end
                     float_msg(witness, "?", FLOAT_MSG_YELLOW);
                  end
                  set_critter_extra_stat(witness, STAT_pe, witness_pe);
               end
            end
         end
      end
   end
   if target_will_die <= 0 orElse (target_will_die > 0 andAlso witness_count > 0) then begin
      tile_refresh_display;
      failed_steal_count += 1;
      call inc_tfsp_gvar_value_pending(town_id, 1, failed_steal_count);
   end
end


procedure ANIM_sequence_get_caught_stealing begin
   variable target = anim_tar_obj;
   variable target_team = has_trait(TRAIT_OBJECT, target, OBJECT_TEAM_NUM);
   variable tar_hex = tile_num(target);
   variable tar_max_hp;
   variable tar_sid;
   variable town_id = cur_town;
   variable gvar_value = get_tfsp_gvar_value(town_id);
   variable dude_hex = tile_num(dude_obj);
   variable dude_rot_to_tar = rotation_to_tile(dude_hex, tar_hex);
   variable power_armor = player_wearing_power_armor;
   variable karma = global_var(GVAR_PLAYER_REPUTATION);
   variable childkiller = global_var(GVAR_CHILDKILLER_REPUTATION);
   variable berserker = global_var(GVAR_BERSERKER_REPUTATION);
   variable harmless_perk = has_trait(TRAIT_PERK, dude_obj, PERK_harmless_perk);
   variable sex_appeal_trait = has_trait(TRAIT_TRAIT, dude_obj, TRAIT_sex_appeal);
   variable timed_event_num;
   variable timed_event_time;
   variable behind_dude_hex = tile_num_in_direction(dude_hex,((dude_rot_to_tar+3) % 6), 2);
   variable stolen_goods_count = len_array(stolen_items_pid_arr);
   variable dude_inv_stolen_goods_count;
   variable pickpocket_count = is_in_array_last_pickpocket_targets(target, 0) - harmless_perk - sex_appeal_trait;
   variable was_caught_count = ((pickpocket_count - 1 - value_caught_stealing) / (value_caught_stealing - 1));
   variable target_will_die;
   variable i;
   variable item_ptr;
   variable item_pid;
   variable item_quantity;
   variable sound_level = base_sound_level;
   variable set_attack;
   variable set_flee;
   variable set_frightened;


   if caught_stealing_town_general_penalty >= 2 then begin
      was_caught_count += 1;
   end
   if town_id <= -1 then begin
      was_caught_count += 1;
   end
      dude_was_robbed = 0;
      set_global_var(GVAR_PLAYER_REPUTATION,(karma - 5));
      if Sonora > 0 then childkiller = berserker;

      if gDudeWeapon > 0 then begin
         inven_unwield(dude_obj);
         dude_unwield = 1;
      end
      anim(target, ANIMATE_ROTATION, rotation_to_tile(tar_hex, dude_hex));
       // check if the player still has stolen items
       if stolen_goods_count > 0 then begin
          for (i = 0; i < (stolen_goods_count); i++) begin
            item_pid = get_array(stolen_items_pid_arr, i);
            if item_pid > 0 then begin
               item_ptr = obj_carrying_pid_obj(dude_obj, item_pid);
               if item_ptr > 0 then begin
                  dude_inv_stolen_goods_count += 1;
               end
            end
         end
         if dude_inv_stolen_goods_count <= 0 then begin
            stolen_goods_count = 0;
            if array_exists(stolen_items_pid_arr) then clear_array(stolen_items_pid_arr);
            if array_exists(stolen_items_quantity_arr) then clear_array(stolen_items_quantity_arr);
         end
      end

      reg_anim_clear(dude_obj);
      //target is child
      if anim_tar_kill_type == KILL_TYPE_children_kills then begin
         //the player doesn't scare kids
         if power_armor <= 0 andAlso childkiller <= 0 andAlso berserker <= 0 andAlso karma <= KARMA_BETRAYER then begin
            //The target has never caught the player stealing
            if was_caught_count <= 0 then begin
               //doesn't do anything. common case
               if random(0,5) or stolen_goods_count <= 0 then begin
                  call ANIM_common_case_child();
               end
               //returns stolen goods that were found. "rare" case
               else begin
                  if anim_tar_gender <= 0 andAlso not(random(0,4)) then begin
                     call ANIM_rare_case_hit_dude_child();
                     sound_level += hit_weak_sound_level;
                  end
                  else begin
                     call ANIM_rare_case_child();
                  end
               end
            end
            //The target has already caught the player stealing at least once
            else begin
               //common case
               if stolen_goods_count > 0 andAlso random(0,3) then begin
                  if random(0,1) then begin
                     call ANIM_rare_case_child();
                  end
                  else begin
                     call ANIM_rare_case_hit_dude_child();
                     sound_level += hit_weak_sound_level;
                  end
               end
               //"rare" case
               else begin
                  if random(0,55) then begin
                     call ANIM_flee_child();
                  end
                  else begin
                     call ANIM_target_is_fleeing_after_giving_item_all_types();
                  end
               end
            end
         end
         //the player scares kids
         else begin
            //if the player has already killed children
            if childkiller >= 1 or karma <= KARMA_BETRAYER then begin
               if random(0,15) then begin
                  call ANIM_target_is_fleeing_after_giving_item_all_types();
               end
               else begin
                  target_will_die = 1;
                  call ANIM_dude_take_0_dmg_and_kills_all_types();
                  sound_level += kill_sound_level;
               end
            end
            //if the player has not killed children yet
            else begin
               //runs away in fear
               if random(0,10) then begin
                  call ANIM_flee_child();
               end
               //flees in fear and leaves the ransom
               else begin
                  if anim_tar_gender <= 0 andAlso not(random(0,10)) then begin
                     call ANIM_target_is_fleeing_after_missed_punch_child();
                     sound_level += hit_weak_sound_level;
                  end
                  else begin
                     call ANIM_target_is_fleeing_after_giving_item_all_types();
                     sound_level += hit_weak_sound_level / 2;
                  end
               end
            end
         end
      end
      else if anim_tar_kill_type == KILL_TYPE_robot_kills then begin
         sound_level += 6;
         if was_caught_count <= 0 then begin
            call add_timed_event_ATTACK_DUDE_ON_SIGHT(target,game_ticks(1));
            anim(target, ANIMATE_ROTATION, rotation_to_tile(tile_num(target), tile_num(dude_obj)));
            call show_float_msg_death_threat(target);
            call clear_gvars();
         end
         else begin
            call clear_gvars();
            tar_sid = get_object_data(target, OBJ_DATA_SID);
            if tar_sid > 0 then begin
               call pickup_proc_exec(target, tar_sid, dude_obj);
               set_attack = 1;
            end
            else begin
               call show_float_msg_attack(target);
               attack_setup(target, dude_obj);
            end
         end
      end
       //target is not a child
      else begin
          //target is supermutant
         if anim_tar_kill_type == KILL_TYPE_super_mutant_kills then begin
            sound_level += hit_mutatant_sound_level;
            if was_caught_count <= 0 then begin
               call ANIM_dude_is_attacked_by_supermutant(75 + (2 * gvar_value) - dude_lu);
            end
            else begin
               if was_caught_count <= 1 then begin
                  call ANIM_dude_is_attacked_by_supermutant_was_caught_before(85 + (2 * gvar_value) - dude_lu);
               end
               else begin
                  call clear_gvars();
                  tar_sid = get_object_data(target, OBJ_DATA_SID);
                  if tar_sid > 0 then begin
                     call pickup_proc_exec(target, tar_sid, dude_obj);
                     set_attack = 1;
                  end
                  else begin
                     call show_float_msg_attack(target);
                     attack_setup(target, dude_obj);
                  end
               end
            end
         end
          //target is not a supermutant
         else begin
            if (military_fid(critter_art_fid(target))) or (power_armor_fid(critter_art_fid(target))) then begin
               if was_caught_count < 0 then begin
                  if stolen_goods_count > 0 andAlso anim_tar_fire_arm > 0 andAlso right_hand_stolen <= 0 then begin
                     call ANIM_target_aim_at_dude(1);
                     sound_level += aim_sound_level;
                  end
                  else begin
                     if power_armor <= 0 then begin
                        call ANIM_dude_is_attacked_by_human(65 + (2 * gvar_value) - dude_lu);
                     end
                     else begin
                        call ANIM_dude_is_attacked_by_human_was_caught_before(35 + (2 * gvar_value) - dude_lu);
                     end
                     sound_level += hit_tough_sound_level;
                  end
               end
               else begin
                  if was_caught_count < 1 then begin
                     if stolen_goods_count > 0 andAlso anim_tar_fire_arm > 0 andAlso right_hand_stolen <= 0 then begin
                        call ANIM_target_aim_at_dude(was_caught_count);
                        sound_level += aim_sound_level;
                     end
                     else begin
                        call ANIM_dude_is_attacked_by_human_was_caught_before(85 + (2 * gvar_value) - dude_lu);
                        sound_level += hit_tough_sound_level;
                     end
                  end
                  else begin
                     call clear_gvars();
                     tar_sid = get_object_data(target, OBJ_DATA_SID);
                     if tar_sid > 0 then begin
                        call pickup_proc_exec(target, tar_sid, dude_obj);
                        set_attack = 1;
                     end
                     else begin
                        call show_float_msg_attack(target);
                        attack_setup(target, dude_obj);
                     end
                     sound_level += hit_tough_sound_level;
                  end
               end
            end
            //some tough NPCs
            else if tough_fid(critter_art_fid(target)) then begin
               //dude is wearing power armor
               if power_armor > 0 then begin
                  if was_caught_count <= 0 then begin
                     if berserker <= 0 then begin
                        if random(0,1) then begin
                           if random(0,2) then begin
                              call ANIM_harmless_response();
                              sound_level += quiet_sound;
                           end
                           else begin
                              call ANIM_dude_is_attacked_by_human_was_caught_before(25 + (2 * gvar_value) - dude_lu);
                              sound_level += hit_weak_sound_level;
                           end
                        end
                        else begin
                           call ANIM_neutral_response_all_types();
                        end
                     end
                     else begin
                        if random(0,5) then begin
                           if random(0,10) then begin
                              if random(0,3) then begin
                                 call ANIM_neutral_response_all_types();
                              end
                              else begin
                                 call ANIM_dude_is_attacked_by_human_was_caught_before(25 + (2 * gvar_value) - dude_lu);
                                 sound_level += hit_weak_sound_level;
                              end
                           end
                           else begin
                              call ANIM_harmless_response();
                              sound_level += quiet_sound;
                           end
                        end
                        else begin
                           if random(0,30) then begin
                              call ANIM_target_is_fleeing();
                           end
                           else begin
                              call ANIM_target_is_fleeing_after_giving_item_all_types();
                           end
                        end
                     end
                  end
                  else begin
                     if was_caught_count <= 1 then begin
                        if berserker <= 0 then begin
                           tar_max_hp = get_critter_stat(target, STAT_max_hp);
                           if tar_max_hp < 100 then begin
                              if random(0,5) then begin
                                 call ANIM_neutral_response_all_types();
                              end
                              else begin
                                 call ANIM_target_is_fleeing();
                              end
                           end
                           else begin
                              if random(0,1) then begin
                                 call ANIM_neutral_response_all_types();
                              end
                              else begin
                                 call ANIM_dude_is_attacked_by_human(35 + (2 * gvar_value) - dude_lu);
                                 sound_level += hit_weak_sound_level;
                              end
                           end
                        end
                        else begin
                           if random(0,2) then begin
                              call ANIM_neutral_response_all_types();
                           end
                           else begin
                              if random(0,30) then begin
                                 if random(0,3) then begin
                                    call ANIM_target_is_fleeing();
                                 end
                                 else begin
                                    call ANIM_target_is_fleeing_after_giving_item_all_types();
                                 end
                              end
                              else begin
                                 target_will_die = 1;
                                 call ANIM_dude_take_0_dmg_and_kills_all_types();
                                 sound_level += kill_sound_level;
                              end
                           end
                        end
                     end
                     else begin
                        call clear_gvars();
                        tar_sid = get_object_data(target, OBJ_DATA_SID);
                        if tar_sid > 0 then begin
                           call pickup_proc_exec(target, tar_sid, dude_obj);
                           set_frightened = 1;
                           tar_max_hp = get_critter_stat(target, STAT_max_hp);
                           if tar_max_hp < 100 andAlso tar_max_hp < get_critter_stat(dude_obj,STAT_max_hp) then begin
                              set_flee = 1;
                           end
                           set_attack = 1;
                        end
                        else begin
