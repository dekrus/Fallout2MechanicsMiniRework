procedure get_bit_count(variable num) begin
   variable count = 0;
   while num > 0 do begin
      count += (num bwand 1);
      num /= 2;
   end
   return count;
end

procedure get_steal_num_with_no_living_witness(variable steal_number) begin
   variable uniq_id;
   variable steal_nums;
   variable no_living_witness_steal_number = steal_number;
   foreach uniq_id:steal_nums in witnesses_array begin
      // except failed steal counter
      if uniq_id > 64 then begin
         no_living_witness_steal_number = no_living_witness_steal_number bwand (bwnot steal_nums);
         if no_living_witness_steal_number <= 0 then
            return 0;
      end
   end
   return get_bit_count(no_living_witness_steal_number);
end

